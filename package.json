    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "cordova": "^11.0.0",
    "cordova-android": "^11.0.0",
    "cordova-ios": "^6.3.0",
    "nodemon": "^2.0.20"
  },
  "cordova": {
    "platforms": [
      "android",
      "ios"
    ],
    "plugins": {
      "cordova-plugin-whitelist": {}
    }
  },
  "engines": {
    "node": ">=14.0.0"
