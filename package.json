{
  "name": "mykitchen-recipe-finder",
  "displayName": "MyKitchen Recipe Finder",
  "version": "1.0.0",
  "description": "Mobile recipe finder app with thousands of recipes from around the world",
  "main": "frontend/index.html",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "build": "cordova build",
